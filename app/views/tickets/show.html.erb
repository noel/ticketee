<div id='ticket'> 
  <h2><%= @ticket.title %></h2> 
  <menu> 
    <%= link_to "Edit", [:edit, @project, @ticket] %> 
    <%= link_to "Delete", [@project, @ticket], :method => :delete, 
            :confirm => "Are you sure you want to delete this ticket?" %>
  </menu>
  <small>Created by <%= @ticket.user.email %></small>
  <%= simple_format(@ticket.description) %> 
</div>